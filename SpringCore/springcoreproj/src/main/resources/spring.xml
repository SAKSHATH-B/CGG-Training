    <bean id="triangle" class="cgg.spring.core.Triangle">
        <property name="pointA" ref="zeroPoint" />
        <property name="pointB" ref="point2" />
        <property name="pointC" ref="point3" />
    </bean>

    <bean id="zeroPoint" class="cgg.spring.core.Point">
        <property name="x" value="0" />
        <property name="y" value="0" />
    </bean>
    <bean id="point2" class="cgg.spring.core.Point">
        <property name="x" value="-20" />
        <property name="y" value="0" />
    </bean>
    <bean id="point3" class="cgg.spring.core.Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>
</beans>